{
  "name": "email-verification-test-suite",
  "version": "1.0.0",
  "description": "Test suite for email verification functionality",
  "private": true,
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "jsdom": "^24.0.0",
    "lucide-react": "^0.294.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^6.0.0",
    "vitest": "^1.2.2"
  },
  "test": {
    "environment": "jsdom",
    "setupFiles": [
      "./tests/setup.ts"
    ],
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "json",
        "html"
      ],
      "exclude": [
        "node_modules/",
        "tests/",
        "**/*.d.ts",
        "dist/",
        "build/"
      ]
    }
  }
}